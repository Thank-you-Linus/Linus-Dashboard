{
  "include": ["src/**/*", "webpack.*.ts"],
  "exclude": ["node_modules", "dist", "custom_components/linus_dashboard/www", "ha-env"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "es2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "jsx": "react",

    /* Modules */
    "module": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      // "@/*": ["src/*"]
    },
    "resolveJsonModule": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "lf",

    /* JavaScript Support */
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false, // Allow implicit returns for flexibility
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": false, // Relax for HA integration
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // Relax for class properties
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false, // Let ESLint handle this
    "noUnusedParameters": false, // Let ESLint handle this

    /* Completeness */
    "skipLibCheck": true,

    /* Performance */
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020"
    }
  },
  "watchOptions": {
    "excludeDirectories": [
      "node_modules",
      "dist",
      "custom_components/linus_dashboard/www",
      "ha-env"
    ]
  }
}
